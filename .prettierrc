{
	"singleQuote": true,
	"semi": false,
	"useTabs": true,
	"tabWidth": 2,
	"trailingComma": "none",
	"printWidth": 100,
	"bracketSpacing": true,
	"arrowParens": "always",
	"endOfLine": "auto",
	"plugins": [
		"prettier-plugin-svelte",

		"@trivago/prettier-plugin-sort-imports",

		"prettier-plugin-tailwindcss"
	],
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		}
	]
}
