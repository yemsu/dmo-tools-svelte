		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@trivago/prettier-plugin-sort-imports": "^4.3.0",
		"@types/eslint": "^9.6.0",
		"@types/google.accounts": "^0.0.15",
		"@types/node": "^22.1.0",
		"@types/three": "^0.170.0",
		"autoprefixer": "^10.4.19",
